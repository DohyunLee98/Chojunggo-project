  	<param-value>
  		jdbcdriver=com.mysql.jdbc.Driver
		jdbcUrl=jdbc:mysql://localhost:3306/chojunggo?characterEncoding=utf8
		dbUser=root
		dbPass=mysql
		validationQuery=select 1
		minIdle=3
		maxTotal=30
		poolName=chojunggo
  	</param-value>
  </context-param>
  
